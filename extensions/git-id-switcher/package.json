{
  "name": "git-id-switcher",
  "displayName": "%extension.displayName%",
  "description": "%extension.description%",
  "version": "0.16.16",
  "publisher": "nullvariant",
  "icon": "images/icon.png",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "SCM Providers"
  ],
  "keywords": [
    "git",
    "identity",
    "author",
    "ssh",
    "gpg",
    "multi-account",
    "profile",
    "switch",
    "change",
    "toggle",
    "manage",
    "account",
    "user",
    "email",
    "config",
    "github",
    "gitlab",
    "signing",
    "commit",
    "workspace",
    "keygen",
    "ssh-agent",
    "ssh-key",
    "gpg-key",
    "credential",
    "i18n",
    "l10n",
    "localization",
    "multilingual",
    "internationalization"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/core/extension.js",
  "l10n": "./l10n",
  "contributes": {
    "commands": [
      {
        "command": "git-id-switcher.selectIdentity",
        "title": "%command.selectIdentity%",
        "category": "Git ID Switcher"
      },
      {
        "command": "git-id-switcher.showCurrentIdentity",
        "title": "%command.showCurrentIdentity%",
        "category": "Git ID Switcher"
      },
      {
        "command": "git-id-switcher.showDocumentation",
        "title": "%command.showDocumentation%",
        "category": "Git ID Switcher"
      },
      {
        "command": "git-id-switcher.deleteIdentity",
        "title": "%command.deleteIdentity%",
        "category": "Git ID Switcher"
      }
    ],
    "configuration": [
      {
        "title": "%config.category.identity%",
        "order": 1,
        "properties": {
          "gitIdSwitcher.identities": {
            "order": 1,
            "type": "array",
            "default": [
              {
                "id": "example",
                "name": "Your Name",
                "email": "you@example.com",
                "service": "",
                "icon": "üë§",
                "description": "Edit this or add your own identity",
                "sshKeyPath": "",
                "sshHost": "",
                "gpgKeyId": ""
              }
            ],
            "description": "%config.identities%",
            "items": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "string",
                  "description": "%config.identities.id%"
                },
                "name": {
                  "type": "string",
                  "description": "%config.identities.name%"
                },
                "email": {
                  "type": "string",
                  "description": "%config.identities.email%"
                },
                "service": {
                  "type": "string",
                  "description": "%config.identities.service%"
                },
                "icon": {
                  "type": "string",
                  "description": "%config.identities.icon%"
                },
                "description": {
                  "type": "string",
                  "description": "%config.identities.description%"
                },
                "sshKeyPath": {
                  "type": "string",
                  "description": "%config.identities.sshKeyPath%"
                },
                "sshHost": {
                  "type": "string",
                  "description": "%config.identities.sshHost%"
                },
                "gpgKeyId": {
                  "type": "string",
                  "description": "%config.identities.gpgKeyId%"
                }
              },
              "required": [
                "id",
                "name",
                "email"
              ]
            },
            "markdownDescription": "%config.identities.markdown%"
          },
          "gitIdSwitcher.defaultIdentity": {
            "order": 2,
            "type": "string",
            "default": "",
            "description": "%config.defaultIdentity%"
          },
          "gitIdSwitcher.autoSwitchSshKey": {
            "order": 3,
            "type": "boolean",
            "default": true,
            "description": "%config.autoSwitchSshKey%"
          }
        }
      },
      {
        "title": "%config.category.submodule%",
        "order": 2,
        "properties": {
          "gitIdSwitcher.applyToSubmodules": {
            "order": 1,
            "type": "boolean",
            "default": true,
            "description": "%config.applyToSubmodules%"
          },
          "gitIdSwitcher.submoduleDepth": {
            "order": 2,
            "type": "number",
            "default": 1,
            "minimum": 1,
            "maximum": 5,
            "description": "%config.submoduleDepth%"
          }
        }
      },
      {
        "title": "%config.category.display%",
        "order": 3,
        "properties": {
          "gitIdSwitcher.showNotifications": {
            "order": 1,
            "type": "boolean",
            "default": true,
            "description": "%config.showNotifications%"
          },
          "gitIdSwitcher.includeIconInGitConfig": {
            "order": 2,
            "type": "boolean",
            "default": false,
            "description": "%config.includeIconInGitConfig%"
          }
        }
      },
      {
        "title": "%config.category.logging%",
        "order": 4,
        "properties": {
          "gitIdSwitcher.logging.fileEnabled": {
            "order": 1,
            "type": "boolean",
            "default": false,
            "description": "%config.logging.fileEnabled%"
          },
          "gitIdSwitcher.logging.level": {
            "order": 2,
            "type": "string",
            "default": "INFO",
            "enum": [
              "DEBUG",
              "INFO",
              "WARN",
              "ERROR",
              "SECURITY"
            ],
            "description": "%config.logging.level%"
          },
          "gitIdSwitcher.logging.filePath": {
            "order": 3,
            "type": "string",
            "default": "",
            "description": "%config.logging.filePath%"
          },
          "gitIdSwitcher.logging.maxFileSize": {
            "order": 4,
            "type": "number",
            "default": 10485760,
            "minimum": 1048576,
            "maximum": 104857600,
            "description": "%config.logging.maxFileSize%"
          },
          "gitIdSwitcher.logging.maxFiles": {
            "order": 5,
            "type": "number",
            "default": 5,
            "minimum": 1,
            "maximum": 20,
            "description": "%config.logging.maxFiles%"
          },
          "gitIdSwitcher.logging.redactAllSensitive": {
            "order": 6,
            "type": "boolean",
            "default": false,
            "description": "%config.logging.redactAllSensitive%"
          }
        }
      },
      {
        "title": "%config.category.advanced%",
        "order": 5,
        "properties": {
          "gitIdSwitcher.commandTimeouts": {
            "order": 1,
            "type": "object",
            "default": {},
            "description": "%config.commandTimeouts%",
            "additionalProperties": {
              "type": "number",
              "minimum": 1000,
              "maximum": 300000
            },
            "markdownDescription": "%config.commandTimeouts.markdown%"
          }
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --cache",
    "test": "npm run compile && node out/test/runTests.js",
    "test:all": "npm run compile && node out/test/runTests.js",
    "test:unit": "npm run compile && node out/test/runUnitTests.js",
    "test:fast": "npm run compile && node out/test/runUnitTests.js",
    "test:security": "npm run compile && node out/test/runSecurityTests.js",
    "test:fuzz": "npm run compile && node out/test/runFuzzTests.js",
    "test:coverage": "npm run compile && npx c8 --reporter=lcov --reporter=text node out/test/runTests.js",
    "test:e2e": "npm run compile && vscode-test",
    "package": "vsce package --no-dependencies",
    "publish": "echo '‚ùå Do not use vsce publish directly. Push a tag instead: git tag git-id-switcher-vX.X.X && git push --tags' && exit 1",
    "generate:readme": "node scripts/generate-root-readme.js"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "diff": "^8.0.3",
    "@types/node": "^25.0.9",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.0.0",
    "eslint": "^9.0.0",
    "fast-check": "^4.5.3",
    "glob": "^13.0.0",
    "mocha": "^11.7.5",
    "typescript": "^5.3.0",
    "typescript-eslint": "^8.53.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nullvariant/nullvariant-vscode-extensions",
    "directory": "extensions/git-id-switcher"
  },
  "homepage": "https://github.com/nullvariant/nullvariant-vscode-extensions/tree/main/extensions/git-id-switcher#readme",
  "license": "MIT"
}
