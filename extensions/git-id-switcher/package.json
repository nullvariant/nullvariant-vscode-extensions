{
  "name": "git-id-switcher",
  "displayName": "%extension.displayName%",
  "description": "%extension.description%",
  "version": "0.10.0",
  "publisher": "nullvariant",
  "icon": "images/icon.png",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "SCM Providers"
  ],
  "keywords": [
    "git",
    "identity",
    "author",
    "ssh",
    "gpg",
    "multi-account",
    "profile",
    "switch",
    "change",
    "toggle",
    "manage",
    "account",
    "user",
    "email",
    "config",
    "github",
    "gitlab",
    "signing",
    "commit",
    "workspace",
    "keygen",
    "ssh-agent",
    "ssh-key",
    "gpg-key",
    "credential",
    "i18n",
    "l10n",
    "localization",
    "multilingual",
    "internationalization"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "git-id-switcher.selectIdentity",
        "title": "%command.selectIdentity%"
      },
      {
        "command": "git-id-switcher.showCurrentIdentity",
        "title": "%command.showCurrentIdentity%"
      }
    ],
    "configuration": {
      "title": "%config.title%",
      "properties": {
        "gitIdSwitcher.identities": {
          "type": "array",
          "default": [
            {
              "id": "example",
              "icon": "üë§",
              "name": "Your Name",
              "service": "",
              "email": "you@example.com",
              "description": "Edit this or add your own identity",
              "sshKeyPath": "",
              "sshHost": "",
              "gpgKeyId": ""
            }
          ],
          "description": "%config.identities%",
          "items": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string",
                "description": "%config.identities.id%"
              },
              "icon": {
                "type": "string",
                "description": "%config.identities.icon%"
              },
              "name": {
                "type": "string",
                "description": "%config.identities.name%"
              },
              "service": {
                "type": "string",
                "description": "%config.identities.service%"
              },
              "email": {
                "type": "string",
                "description": "%config.identities.email%"
              },
              "description": {
                "type": "string",
                "description": "%config.identities.description%"
              },
              "sshKeyPath": {
                "type": "string",
                "description": "%config.identities.sshKeyPath%"
              },
              "sshHost": {
                "type": "string",
                "description": "%config.identities.sshHost%"
              },
              "gpgKeyId": {
                "type": "string",
                "description": "%config.identities.gpgKeyId%"
              }
            },
            "required": [
              "id",
              "name",
              "email"
            ]
          },
          "markdownDescription": "%config.identities.markdown%"
        },
        "gitIdSwitcher.defaultIdentity": {
          "type": "string",
          "default": "",
          "description": "%config.defaultIdentity%"
        },
        "gitIdSwitcher.autoSwitchSshKey": {
          "type": "boolean",
          "default": true,
          "description": "%config.autoSwitchSshKey%"
        },
        "gitIdSwitcher.showNotifications": {
          "type": "boolean",
          "default": true,
          "description": "%config.showNotifications%"
        },
        "gitIdSwitcher.applyToSubmodules": {
          "type": "boolean",
          "default": true,
          "description": "%config.applyToSubmodules%"
        },
        "gitIdSwitcher.submoduleDepth": {
          "type": "number",
          "default": 1,
          "minimum": 1,
          "maximum": 5,
          "description": "%config.submoduleDepth%"
        },
        "gitIdSwitcher.includeIconInGitConfig": {
          "type": "boolean",
          "default": false,
          "description": "%config.includeIconInGitConfig%"
        },
        "gitIdSwitcher.commandTimeouts": {
          "type": "object",
          "default": {},
          "description": "%config.commandTimeouts%",
          "additionalProperties": {
            "type": "number",
            "minimum": 1000,
            "maximum": 300000
          },
          "markdownDescription": "%config.commandTimeouts.markdown%"
        },
        "gitIdSwitcher.logging.fileEnabled": {
          "type": "boolean",
          "default": false,
          "description": "%config.logging.fileEnabled%"
        },
        "gitIdSwitcher.logging.filePath": {
          "type": "string",
          "default": "",
          "description": "%config.logging.filePath%"
        },
        "gitIdSwitcher.logging.maxFileSize": {
          "type": "number",
          "default": 10485760,
          "minimum": 1048576,
          "maximum": 104857600,
          "description": "%config.logging.maxFileSize%"
        },
        "gitIdSwitcher.logging.maxFiles": {
          "type": "number",
          "default": 5,
          "minimum": 1,
          "maximum": 20,
          "description": "%config.logging.maxFiles%"
        },
        "gitIdSwitcher.logging.level": {
          "type": "string",
          "default": "INFO",
          "enum": ["DEBUG", "INFO", "WARN", "ERROR", "SECURITY"],
          "description": "%config.logging.level%"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts",
    "test": "npm run compile && node out/test/runTests.js",
    "test:security": "npm run compile && node out/test/runTests.js",
    "package": "vsce package",
    "publish": "echo '‚ùå Do not use vsce publish directly. Push a tag instead: git tag git-id-switcher-vX.X.X && git push --tags' && exit 1"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "typescript": "^5.3.0",
    "@vscode/vsce": "^3.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nullvariant/nullvariant-vscode-extensions",
    "directory": "extensions/git-id-switcher"
  },
  "homepage": "https://github.com/nullvariant/nullvariant-vscode-extensions/tree/main/extensions/git-id-switcher#readme",
  "license": "MIT"
}
