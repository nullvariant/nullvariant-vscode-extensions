{
  "name": "git-id-switcher",
  "displayName": "%extension.displayName%",
  "description": "%extension.description%",
  "version": "0.4.4",
  "publisher": "nullvariant",
  "icon": "images/icon.png",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "SCM Providers"
  ],
  "keywords": [
    "git",
    "identity",
    "author",
    "ssh",
    "gpg",
    "multi-account",
    "profile",
    "switch",
    "change",
    "toggle",
    "manage",
    "account",
    "user",
    "email",
    "config",
    "github",
    "gitlab",
    "signing",
    "commit",
    "workspace",
    "keygen",
    "ssh-agent",
    "ssh-key",
    "gpg-key",
    "credential"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "git-id-switcher.selectIdentity",
        "title": "%command.selectIdentity%"
      },
      {
        "command": "git-id-switcher.showCurrentIdentity",
        "title": "%command.showCurrentIdentity%"
      }
    ],
    "configuration": {
      "title": "%config.title%",
      "properties": {
        "gitIdSwitcher.identities": {
          "type": "array",
          "default": [],
          "description": "%config.identities%",
          "items": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string",
                "description": "%config.identities.id%"
              },
              "icon": {
                "type": "string",
                "description": "%config.identities.icon%"
              },
              "name": {
                "type": "string",
                "description": "%config.identities.name%"
              },
              "email": {
                "type": "string",
                "description": "%config.identities.email%"
              },
              "description": {
                "type": "string",
                "description": "%config.identities.description%"
              },
              "sshKeyPath": {
                "type": "string",
                "description": "%config.identities.sshKeyPath%"
              },
              "sshHost": {
                "type": "string",
                "description": "%config.identities.sshHost%"
              },
              "gpgKeyId": {
                "type": "string",
                "description": "%config.identities.gpgKeyId%"
              }
            },
            "required": [
              "id",
              "name",
              "email"
            ]
          },
          "markdownDescription": "%config.identities.markdown%"
        },
        "gitIdSwitcher.defaultIdentity": {
          "type": "string",
          "default": "",
          "description": "%config.defaultIdentity%"
        },
        "gitIdSwitcher.autoSwitchSshKey": {
          "type": "boolean",
          "default": true,
          "description": "%config.autoSwitchSshKey%"
        },
        "gitIdSwitcher.showNotifications": {
          "type": "boolean",
          "default": true,
          "description": "%config.showNotifications%"
        },
        "gitIdSwitcher.applyToSubmodules": {
          "type": "boolean",
          "default": true,
          "description": "%config.applyToSubmodules%"
        },
        "gitIdSwitcher.submoduleDepth": {
          "type": "number",
          "default": 1,
          "minimum": 1,
          "maximum": 5,
          "description": "%config.submoduleDepth%"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "typescript": "^5.3.0",
    "@vscode/vsce": "^3.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nullvariant/nullvariant-vscode-extensions",
    "directory": "extensions/git-identity-switcher"
  },
  "license": "MIT"
}
